<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Online Delivery Service And Market Place">
    <meta name="keywords" content="delivery, market, enroute24, 24">
    <meta name="author" content="tagsmann">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#F76C6C">

    <title>Enroute24 | Post</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">


    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body class="container-fluid">


    <%- include('partials/header') -%>
    <%- messages('message_template', locals) %>

    <div class="row nav_and_content justify-content-around">

        <form method="post" action="/shopping/post" id="productPostForm" class="col-10 col-sm-8 col-md-10 col-lg-8">

            <h1 class="col-12 text-center" style="color: #F76C6C;">Create Product</h1>
            <h6 class="col-12 text-center">Complete the form below to create a product.</h6><br>

            <% if(errors){ %>
            <div>
                <p class="row alert alert-danger"><%=errors[0].msg %></p>
            </div>
            <%}%>

        
            <div class="row justify-content-around">
    <div class="col-12 col-md-6">          
    <div class="row">
    <select name="category" class="form-control form-control-sm col-12">
            <option value="<%=data.category%>" selected><%=data.category || "Category"%></option>
            <option value="groceries">Groceries</option>
            <option value="foods&amp;bevs">foods &amp; Beverages</option>
            <option value="medicals">Medicals</option>
            <option value="electronics">Electronics</option>
            <option value="electricals">Electricals</option>
            <option value="furniture">Furniture</option>
            <option value="boutique">Boutique</option>
            <option value="oil&amp;gas">Oil &amp; Gas</option>
            <option value="deliveries">Deliveries</option>
            </select>

            <input type="text" name="name" placeholder="Name" class="form-control form-control-sm col-12" value="<%=data.name%>" autocomplete="off">

            <input type="text" name="model" placeholder="Model" class="form-control form-control-sm col-12" value="<%=data.model%>" autocomplete="off">

            <input type="text" name="size" placeholder="Size" class="form-control form-control-sm col-12" value="<%=data.size%>" autocomplete="off">

            <input type="text" name="color" placeholder="Color" class="form-control form-control-sm col-12" value="<%=data.color%>" autocomplete="off">

            <input type="text" name="quality" placeholder="Quality" class="form-control form-control-sm col-12" value="<%=data.quality%>" autocomplete="off">

            <input type="text" name="price" placeholder="Price" class="form-control form-control-sm col-12" value="<%=data.price%>" autocomplete="off">

            <input type="text" name="from" placeholder="Name of agency" class="form-control form-control-sm col-12" value="<%=data.from || ''%>" autocomplete="off">

            <input type="text" name="keywords" placeholder="Keywords" class="form-control form-control-sm col-12" value="<%=data.keywords%>" autocomplete="off">

            <input type="text" name="country" placeholder="Country" class="form-control form-control-sm col-12" value="<%=data.country%>" autocomplete="off">

            <input type="text" name="districts" placeholder="Districts" class="form-control form-control-sm col-12" value="<%=data.districts%>" autocomplete="off">

    </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="row">
            <pre class="col-12"><textarea name="details" placeholder="Other Product Details" class="form-control form-control-sm col-12" style="width: 100%; height: 150px;"><%=data.details%></textarea></pre>
        </div>
    </div>

    </div>


    <div class="row justify-content-center">
        <input type="submit" value="Post Product" class="btn btn-success btn-lg col-12 col-md-5 col-lg-3">
    </div>
    </form>
    </div>

</body>

</html>

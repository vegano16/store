<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Online Delivery Service And Market Place">
    <meta name="keywords" content="delivery, market, enroute24, 24">
    <meta name="author" content="tagsmann">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Enroute24 | Product Update</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">

    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="css/styles.css?v=1.0">

</head>

<body class="container-fluid">


    <%- include('partials/header') -%>
    <%- messages('message_template', locals) %>

    <div class="row nav_and_content justify-content-around">

        <%- include('partials/nav-template') -%>

        <div class="col-12 col-lg-9 page_content">

            <small><%=user%></small>

            <% if(errors){ %>
            <div>
                <p><%=errors[0].msg %></p>
            </div>
            <%}%>

        <form method="post" action="/products/update/<%=product._id%>" id="EditForm" class="container offset-lg-2 col-lg-8">

            <h1 class="text-center">Update Product</h1>
            <small class="row col-12 text-center">Complete the form below to update this product.</small>

            <div class="row form-group">
                <select name="category" class="form-control form-control-sm col-lg-6">
                    <option value="<%=product.category || ""%>" selected><%=product.category || ""%></option>
                    <option value="groceries">Groceries</option>
                    <option value="meals">Meals</option>
                    <option value="electronics">Electronics</option>
                    <option value="deliveries">Deliveries</option>
                </select>

                <select name="subcategory" class="form-control form-control-sm col-lg-6">
                    <option value="<%=product.subcategory || ""%>" selected><%=product.subcategory || ""%></option>
                    <option value="groceries">Groceries</option>
                    <option value="meals">Meals</option>
                    <option value="electronics">Electronics</option>
                    <option value="deliveries">Deliveries</option>
                </select>

                <input type="text" name="name" placeholder="Name" class="form-control form-control-sm col-lg-6" value="<%=product.name%>">
                <input type="text" name="model" placeholder="Model" class="form-control form-control-sm col-lg-6" value="<%=product.model%>">

                <input type="text" name="price" placeholder="Price" class="form-control form-control-sm col-lg-6" value="<%=product.price%>">
                <input type="text" name="color" placeholder="Color" class="form-control form-control-sm col-lg-6" value="<%=product.color%>">

                <input type="text" name="size" placeholder="size" class="form-control form-control-sm col-lg-6" value="<%=product.size%>">
                <input type="text" name="quality" placeholder="quality" class="form-control form-control-sm col-lg-6" value="<%=product.quality%>">

                <pre><textarea name="description" placeholder="Product description" class="form-control form-control-sm col-lg-6"><%=product.description%></textarea></pre>
            </div>


            <input type="submit" value="Update this Product" class="btn btn-success">

            <a href="/products/gallery/<%=product._id%>" class="btn btn-warning" data-id="<%=product._id%>" title="Update Image"><i class="fas fa-image"></i></a>
            </form>
        </div>
    </div>

    <%- include('partials/footer') -%>

    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>

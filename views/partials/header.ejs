<header>
    <div class="col-12 text-center">
        <h1 style="text-decoration: none;"><a href="/"><small><span style="color: silver">Mall</span><span style="color: red">24</span></small></a></h1>
    </div>


    <div class="row header justify-content-around">

        <div class="row head-user col-6 col-sm-6 col-md-3 col-lg-3 justify-content-around" style="margin: 5px 0;">

            <%if(user){%>
            <a href="/users/profile/<%=user._id%>">
                <button class="btn btn-default" style="color: #000;"><i class="fas fa-user" title="<%=user.fname%>"></i></button>
            </a>
            <%}%>
                
            <button class="btn btn-default displayCart" style="color: orange;"><i class="fas fa-cart-arrow-down" title="Cart"></i></button>
                
            <button class="btn btn-default displayWishList" style="color: limegreen;" title="Wish List"><i class="far fa-heart"></i></button>
    </div>
        
        <div class="row head-control col-6 col-sm-6 col-md-3 col-lg-3 justify-content-center" style="margin: 5px 0;">
              <%if(user){%>

            <a href="/admin/dashboard/<%=user._id%>">
                <button class="btn btn-warning" style="color: #fff;" title="Dashboard"><i class="fas fa-chart-line fa-lg"></i></button>
            </a>

            <a href="/user/messages">
                <button class="btn btn-primary" style="color: #fff;" title="Messages"><i class="fas fa-envelope fa-lg"></i></button>
            </a>
            <a href="/users/logout">
                <button class="btn btn-danger" style="color: #fff;" title="Log Out">Log Out</button>
            </a>
            <%}else{%>
            <a href="/users/register">
                <button class="btn btn-primary" style="color: #fff;" title="Register">Register</button>
            </a>
            <a href="/users/login">
                <button class="btn btn-success" style="color: #fff;" title="Log In">Log In</button>
            </a>
            <%}%>
        </div>


<div class="row head-search col-sm-12 col-md-6 col-lg-6 justify-content-around" style="margin: 5px 0;">
<form method="get" action="/products/search" class="searchForm row col-12 justify-content-around">
<input type="text" name="key" autocomplete="off" placeholder="Enter search item" class="form-control row col-12 col-sm-12 col-md-12 col-lg-12">
      </form>
        </div>

      </div>
      <small><%=nav%></small>
            <hr>
</header>

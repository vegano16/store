<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Snappi</title>
    <meta name="description" content="Online market">
    <meta name="author" content="Me">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">


    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="css/styles.css?v=1.0">

</head>

<body class="container-fluid">

    <%- include('partials/header') -%>

    <div class="row nav_and_content justify-content-around">


        <form method="post" action="/users/register" id="registrationForm" class="col-sm-8 col-lg-8">

            <h1 class="text-center">Register</h1>
            <h6 class="text-center">Complete the form below to register.</h6><br>

            <div class="form-group">
                <%- messages('message_template', locals) %>
                <% if(errors){ %>
                <div>
                    <p class="alert alert-danger"><%=errors[0].msg %></p>
                </div>
                <%}%>
        </div>


        <div class="row form-group justify-content-center">
            <input type="text" name="fname" placeholder="First Name" class="form-control col-lg-5" autocomplete="off" value="<%=data.fname%>">
                <input type="text" name="lname" placeholder="Last Name" class="form-control col-lg-5" autocomplete="off" value="<%=data.lname%>">
            </div>

            <div class="row form-group justify-content-center">
                <input type="text" name="email" placeholder="Email" class="form-control col-lg-5" autocomplete="off" value="<%=data.email%>">
                <input type="text" name="phone" placeholder="Phone" class="form-control col-lg-5" autocomplete="off" value="<%=data.phone%>">
            </div>

            <div class="row form-group justify-content-center">
                <input type="text" name="username" placeholder="Username" class="form-control col-lg-5" autocomplete="off" value="<%=data.username%>">
                <input type="text" name="gender" placeholder="Gender" class="form-control col-lg-5" autocomplete="off">
            </div>

            <div class="row form-group justify-content-center">
                <input type="password" name="password" placeholder="Password" class="form-control col-lg-5" autocomplete="off" value="<%=data.password%>">
                <input type="password" name="passwordConfirmation" placeholder="Confirm Password" class="form-control col-lg-5" autocomplete="off" value="<%=data.passwordConfirmation%>">
            </div>

            <input type="submit" value="Register" class="btn btn-primary">
        </form>
    </div>

    <%- include('partials/footer') -%>

    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/js/script.js"></script>

</body>

</html>

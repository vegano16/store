<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Online Delivery Service And Market Place">
    <meta name="keywords" content="delivery, market, enroute24, 24">
    <meta name="author" content="tagsmann">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#F76C6C">

    <title>Enroute24 | <%=product.name + " " + product.model%></title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">

    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="css/styles.css?v=1.0">

</head>

<body class="container-fluid">


    <%- include('partials/header') -%>
    <%- messages('message_template', locals) %>

    <div class="row nav_and_content justify-content-around">
        <%- include('partials/nav-template') -%>
        <div class="col-12 col-lg-9 page_content">

            <h1>Product(<%=product._id%>)</h1>

            <div class="productSelect">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <img class="productImage col-12" src="<%=product.image%>" />
                    </div>
                    <div class="productInfo col-12 col-lg-6">
                        <h2>Product Information</h2>
                        <hr>
                        <p><%=product.name%> <%=product.model%></p>
                        <p>GH&cent; <%=product.price%></p>
                        <p><%=product.color%></p>
                        <p><%=product.size%></p>
                        <p><%=product.quality%></p>
                        <p><%=product.productId%></p>
                        <p><%=product.description%></p>

                        <hr>

                        <div class="row justify-content-around" style="padding: 10px;">
                            <%if(user && user.accessLevel=="client"){%>
                            <a href="/shopping/update/<%=product._id%>" class="btn btn-default" title="Edit"><i class="fas fa-pen"></i></a>
                            <button class="btn btn-danger delete-product" data-id="<%=product._id%>" title="Delete"><i class="fas fa-trash-alt"></i></button>
                            <%}%>
                            <a href="/shopping/report/<%=product._id%>" class="btn btn-primary" title="Report Product"><i class="fas fa-exclamation-triangle"></i></a>
                            <a href="#" class="btn btn-success" title="Like"><i class="fas fa-heart"></i></a>
                            <button class="btn btn-warning addToCart" data-id="<%=(JSON.stringify(product))%>" title="Add to cart"><i class="fas fa-cart-plus"></i></button>
                        </div>

                        <hr>

                    </div>
                </div>

                <div class="imageGallery col-12">
                    <div class="row">
                        <% product.gallery.forEach(function (image) { %>
                        <img class="image col-12 col-sm-6 col-lg-4" src="<%=image%>" />
                        <%})%>
                    </div>
                </div>

                <hr>

            </div>
        </div>
    </div>

    <%- include('partials/footer') -%>

    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/del.js"></script>
</body>

</html>

<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Online Delivery Service And Market Place">
    <meta name="keywords" content="delivery, market, enroute24, 24">
    <meta name="author" content="tagsmann">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#F76C6C">

    <title>Enroute24 | Security</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">

    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="css/styles.css?v=1.0">

</head>

<body class="container-fluid">


    <%- include('partials/header') -%>
    <%- messages('message_template', locals) %>

    <div class="row nav_and_content justify-content-around">
        <%- include('partials/nav-template') -%>
        <div class="col-12 col-lg-9 page_content">

            <small>Hi <%=user.fname%></small>

            <form method="post" action="/users/profile/security/<%=user._id%>" id="security" class="row justify-content-around">

                <div class="col-10 col-md-6">
                    <h1 class="text-center">Security Options</h1>
                    <h6 class="text-center">Manage your security.</h6><br>

                    <% if(errors){ %>
                    <div>
                        <p class="row alert alert-danger"><%=errors[0].msg %></p>
                    </div>
                    <%}%>
        <h5 class="row">Password Change</h5>
        <div class="row form-group">
            <label for="password">New Password</label>
            <input type="password" name="newPassword" placeholder="New password" class="form-control form-control-sm" value="<%=data.password%>">
                </div>

                <div class="row form-group">
                    <input type="password" name="newPasswordConfirmation" placeholder="Confirm new password" class="form-control form-control-sm">
                </div>
                <div class="row form-group">
                    <label for="password">Current Password</label>
                    <input type="password" name="currentPassword" placeholder="Enter current password" class="form-control form-control-sm">
                </div>

                <div class="row form-group justify-content-between">
                    <input type="submit" value="Change Password" class="btn btn-danger">
                </div>
        </div>
        </form>
    </div>
    </div>

    <%- include('partials/footer') -%>

    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/del.js"></script>
</body>

</html>

<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Online Delivery Service And Market Place">
    <meta name="keywords" content="delivery, market, enroute24, 24">
    <meta name="author" content="tagsmann">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#F76C6C">

    <title><%=products.category%></title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="assets/css/home.min.css">

    <!--<link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/bower_components/fontawesome/css/all.css">-->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/styles.css">

</head>

<body class="container-fluid">


    <%- include('partials/header') -%>
    <%- messages('message_template', locals) %>

    <div class="row nav_and_content justify-content-around">
        <%- include('partials/nav-template') -%>

        <div class="col-12 col-lg-9 page_content">

            <small style="color: #AEAEAE;" class="smallInfoBar"><span class="tellTime">Local Time</span>
                | <span style="color: #F76C6C;"><%= products.length%></span> items displayed</small><br>

            <div class="productlist">
                <% products.forEach(function (product) { %>

                <div class="product" style="margin: 5px">
                    <a href="/products/<%=product._id%>">
                        <div class="imageHolder" style="width: 100%; height: 175px;"><img class="image" src="<%=product.image%>" style="border-radius: 5px; box-shadow: 0px 2px 2px 1px rgba(0, 0, 0, 0.1);" /></div>
                    </a>
                    <div class="productAbout">
                        <small><%=product.name%></small>
                        <small><%=product.model%></small><br>
                        <small>GH&cent;<%=product.price%></small>
                        <small><%=product.color%></small>
                    </div>
                    <hr>
                    <div class="row justify-content-center">
                        <%if(user && user.accessLevel=="client"){%>
                        <a href="/products/update/<%=product._id%>" class="btn" style="background-color: #24305E; color: #ffffff" title="Edit"><i class="fas fa-pen"></i></a>
                        <%}%>
                <a href="#" class="btn" style="background-color: #A8D0E6; color: #ffffff" title="Like"><i class="fas fa-heart"></i></a>
                <a href="#" class="btn addToCart" style="background-color: #F76C6C; color: #ffffff" data-id="<%=(JSON.stringify(product))%>" title="Add to cart"><i class="fas fa-cart-plus"></i></a>

                    </div>
                </div>

                <% }) %>
            </div>

        </div>
    </div>

    <%- include('partials/footer') -%>

    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/del.js"></script>
</body>

</html>
